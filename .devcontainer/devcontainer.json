{
  "name": "Frontline Pass Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:0-3.11",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt",
  "forwardPorts": [],
  "remoteUser": "vscode",
  "shutdownAction": "none"
}
