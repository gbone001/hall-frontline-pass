DISCORD_TOKEN=
VIP_DURATION_HOURS=4
CHANNEL_ID=
LOCAL_TIMEZONE=Europe/Berlin  # IANA timezone, e.g. Europe/Berlin

# Announcement controls
ANNOUNCEMENT_MESSAGE_ID=

# Moderator role (optional)
MODERATOR_ROLE_ID=

# Temporary VIP Discord role + claim channel (optional but recommended for /assignvip)
# VIP_TEMP_ROLE_ID is the Discord role ID that grants access to the VIP claim channel.
# VIP_CLAIM_CHANNEL_ID is the text channel where users should click Get VIP
# If VIP_CLAIM_CHANNEL_ID is not set, the bot will fall back to CHANNEL_ID
VIP_TEMP_ROLE_ID=
VIP_CLAIM_CHANNEL_ID=

# Weekly /assignvip limiter (optional, defaults to 5)
VIP_ASSIGN_LIMIT=5

# Slash command sync (optional)
# For instant availability of slash commands in specific servers, set one or more guild IDs.
# Comma-separated for multiple guilds, e.g. 123456789012345678,987654321098765432
COMMAND_GUILD_IDS=
# Alternatively, a single ID can be put in COMMAND_GUILD_ID=
COMMAND_GUILD_ID=

# CRCON HTTP API configuration (required)
# Example base URL: https://crcon.example.com:8010  (the /api segment is added automatically)
CRCON_HTTP_BASE_URL=
# Provide either a bearer token or username/password (both username & password must be set)
CRCON_HTTP_BEARER_TOKEN=
CRCON_HTTP_USERNAME=
CRCON_HTTP_PASSWORD=
CRCON_HTTP_VERIFY=true        # Optional: set to false when using self-signed certificates
CRCON_HTTP_TIMEOUT=20         # Optional: CRCON HTTP timeout in seconds


